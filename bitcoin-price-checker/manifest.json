{
    "manifest_version": 3,
    "name": "Bitcoin Price Checker",
    "version": "1.0",
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
      }
    },
    "permissions": [
      "alarms",
      "notifications",
      "storage"
    ],
    "host_permissions": [
      "https://api.coindesk.com/",
      "https://api.coingecko.com/"
    ],
    "background": {
      "service_worker": "background.js"
    }
    


  }
  